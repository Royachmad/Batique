<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="11"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".AmbilGambar"
    android:background="@drawable/bg">

    <!--layout atas-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/logo1"
            />

    </RelativeLayout>

    <!--layout tengah-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayo Ambil Gambarmu!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/coklattua"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentuh tombol untuk mengaktifkan"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/coklattua"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fungsi kamera! "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/coklattua"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <!--layout bawah-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="4">

        <Button
            android:id="@+id/ag_ambilgambar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ambil Gambar"
            android:textColor="#fff"
            android:background="@color/coklattua"
            />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Kembali"
            android:layout_below="@+id/ag_ambilgambar"
            />
    </RelativeLayout>



</LinearLayout>