<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/putihtulang">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/klowong"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klowong"
        android:textColor="@color/coklattua"
        android:fontFamily="@font/michegar"
        android:textSize="30sp"
        android:gravity="center">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klowong atau nglowong adalah proses melekatkan malam/lilin batik pertama kali pada kain yang akan dibatik dengan cara menorehkan lilin pada kain yang akan dibatik dengan cara menggunakan canting (batiktulis) atau melekatkan lilin dengan pola cap tembaga menggunakan cap (batik cap)."
        android:textColor="@color/coklattua"
        android:fontFamily="@font/keep"
        android:textSize="15sp"
        android:gravity="center">
    </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/NextOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="   Next   "
            android:textSize="20sp"
            android:layout_gravity="bottom|end"
            android:gravity="bottom|end"
            android:textColor="@color/coklattua"
            android:fontFamily="@font/keep"
            android:clickable="true"
            android:focusable="true"
            >


        </TextView>
    </LinearLayout>

</LinearLayout>